{% extends 'base.html.twig' %}

{% block title %}Show{% endblock %}

{% block body %}

    <article>

            <br></br>
            <h2>{{ article.title }}</h2><br></br>
            <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/y') }} Ã  {{article.createdAt | date('H:i') }} dans la categorie {{ article.category.title }} </div>
            <div class="content"><br></br>
            <img src="{{ article.image }}" alt"">
            <br></br>
            {{ article.content | raw }}
            </div>
    </article> 
<hr>
    {% for comment in article.comments %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    {{comment.author}} (<small>{{comment.createdAt | date('d/m/Y h:i')}}</small>)
                </div>
                <div class="col-6">
                    {{comment.content | raw}}
                </div>
            </div>
        </div>
    {% endfor %}
    <h3>{{ article.comments | length }} commentaires : </h3>
    {{ form_start(commentForm) }}
    {{ form_row(commentForm.author, {'attr': {'placeholder': "Votre nom"}})}}
    {{ form_row(commentForm.content, {'attr': {'placeholder': "Votre commentaire"}})}}

    <button type="submit" class="btn btn-success">Commenter</button>
    {{ form_end(commentForm) }}
{% endblock %}
